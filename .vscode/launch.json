{
    "configurations": [
        {
            "documentation": "code.visualstudio.com/docs/cpp/launch-json-reference",
            "name":     "gdb",
            "type":     "cppdbg",
            "request":  "launch",
            "program":  "${workspaceFolder}/build/devtemplate_executable",
            "cwd":      "${workspaceFolder}/build",
            "args":     [],

            "MIMode": "gdb",
            "preLaunchTask": "cmake-tasksBuildCommand",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "documentation": "https://github.com/vadimcn/codelldb/blob/v1.10.0/MANUAL.md",
            "name":     "lldb",
            "type":     "lldb",
            "request":  "launch",
            "program":  "${workspaceFolder}/build/devtemplate_executable",
            "cwd":      "${workspaceFolder}/build",
            "args":     [],

            "initCommands": [ "shell cmake --build ${workspaceFolder}/build" ],
        },
        {
            "documentation": "code.visualstudio.com/docs/python/debugging",
            "name":     "Python",
            "type":     "python",
            "request":  "launch",
            "program":  "${workspaceFolder}/executable/executable.py",
            "cwd":      "${workspaceFolder}/build",
            "args":     []
        }
    ]
}